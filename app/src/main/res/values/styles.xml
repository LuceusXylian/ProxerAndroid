        <item name="materialDrawerDividerColor">?attr/colorSurface</item>
        <item name="materialDrawerSelectedBackgroundColor">?colorSecondary</item>
    </style>

    <style name="Widget.App.MaterialDrawerHeaderStyle" parent="Widget.MaterialDrawerHeaderStyle">
        <item name="materialDrawerCompactStyle">true</item>
        <item name="materialDrawerHeaderSelectionText">?attr/colorOnPrimary</item>
        <item name="materialDrawerHeaderSelectionSubtext">?attr/colorOnPrimary</item>
    </style>
