<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Gloomy" parent="Theme.App">
        <item name="colorPrimary">@color/primary_gloomy</item>
        <item name="colorPrimaryDark">@color/primary_gloomy_dark</item>
        <item name="colorPrimaryLight">@color/primary_gloomy_light</item>

        <item name="colorSecondary">@color/secondary_gloomy</item>
        <item name="colorSecondaryDark">@color/secondary_gloomy_dark</item>
        <item name="colorSecondaryLight">@color/secondary_gloomy_light</item>
    </style>

    <style name="Theme.App.Gloomy.NoBackground" parent="Theme.App.Gloomy">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
